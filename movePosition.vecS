#version 330 core

//转换矩阵
uniform mat4 trans;

//输入位置
layout(location = 0) in vec3 position;
//输入颜色
layout(location = 1) in vec3 color;
//输入纹理坐标
layout(location = 2) in vec2 coord;

// 输出颜色
out vec4 ourColor;
// 输出纹理坐标
out vec2 texCoord;

void main()
{
    gl_Position = trans*vec4(position, 1.0f);
    //gl_Position = vec4(position, 1.0f);
    ourColor = vec4(color, 1.0f);
    texCoord = vec2(coord.x, 1.0f-coord.y);
}
